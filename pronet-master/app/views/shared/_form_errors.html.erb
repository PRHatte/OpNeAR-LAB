<% if object.errors.try(:count) > 0 %>
  <div class="alert alert-danger" role="alert">
    <p>
      <%= pluralize(object.errors.count, "error") %> prevented the form from being saved:
    </p>

    <ul>
      <% object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>