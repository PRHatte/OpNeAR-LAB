<div class="col-md-4 col-md-offset-4 well">
  <h1>Sign In</h1>

  <%= form_for :user, url: auth_path do |f| %>
    <div class="form-group">
      <%= f.label :email %><br>
      <%= f.text_field :email, class: "form-control" %>
    </div>

    <%= f.submit "Sign In", class: 'btn btn-primary' %>
  <% end %>
</div>